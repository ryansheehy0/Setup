{
    "//": "Set Color theme",
    "//": "Icon Themes",
        "workbench.iconTheme": "material-icon-theme",
    "//": "Tabs",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    "//": "Remove highlighting of occurrences of currently selected word",
        "editor.occurrencesHighlight": false,
    "//": "Enables word wrapping",
        "editor.wordWrap": "on",
    "//": "No editor/welcome file on startup.",
        "workbench.startupEditor": "none",
    "//": "Removes startup prompt related to workspace trust.",
        "security.workspace.trust.startupPrompt": "never",
        "security.workspace.trust.banner": "never",
        "security.workspace.trust.untrustedFiles": "open",
    "//": "Open files in new tabs",
        "workbench.editor.enablePreview": false,
    "//": "Defualt terminal shell",
        "terminal.integrated.defaultProfile.linux": "bash",
    "//": "Remove minimap",
        "editor.minimap.enabled": false,
    "//": "Remove top breadcrums/patth to current file",
    "//": "Tab key presses handled by the terminal instead of the system:",
        "terminal.integrated.tabFocusMode": false,
    "//": "Remove indentation guides",
        "editor.guides.indentation": false,
    "//": "Remove bracket pair hightlighting",
        "editor.guides.bracketPairsHorizontal": false,
    "//": "Allow folding in vim",
        "vim.foldfix": true,
        "workbench.colorTheme": "Neovim Color Theme",
    "//": "Setting up priter",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[javascript]": {
            "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
}
{
    "//": "Icon Themes",
      "workbench.iconTheme": "material-icon-theme",
    "//": "Tabs",
      "editor.tabSize": 2,
      "editor.insertSpaces": true,
    "//": "Remove highlighting of occurrences of currently selected word",
      "editor.occurrencesHighlight": "off",
    "//": "Enables word wrapping",
      "editor.wordWrap": "on",
    "//": "No editor/welcome file on startup.",
      "workbench.startupEditor": "none",
    "//": "Removes startup prompt related to workspace trust.",
      "security.workspace.trust.startupPrompt": "never",
      "security.workspace.trust.banner": "never",
      "security.workspace.trust.untrustedFiles": "open",
    "//": "Open files in new tabs",
    "//": "Default terminal shell",
      "terminal.integrated.defaultProfile.linux": "bash",
    "//": "Remove minimap",
      "editor.minimap.enabled": false,
    "//": "Tab key presses handled by the terminal instead of the system:",
      "terminal.integrated.tabFocusMode": false,
    "//": "Remove indentation guides",
      "editor.guides.indentation": false,
    "//": "Remove bracket pair hightlighting",
      "editor.guides.bracketPairsHorizontal": false,
    "//": "Allow folding in vim",
      "vim.foldfix": true,
    "//": "Setting up priter",
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
      },
      "[markdown]": {
        "editor.defaultFormatter": "darkriszty.markdown-table-prettify"
      },
      "window.restoreFullscreen": true,
      "workbench.editor.enablePreview": false,
      "workbench.colorTheme": "Neovim Color Theme",
      "svg.preview.mode": "svg",
      "window.newWindowDimensions": "maximized",
      "markdown-toc.orderedList": false,
      "amVim.bindCtrlCommands": false,
      "tailwind-fold.supportedLanguages": [
        "handlebars",
        "html",
        "typescriptreact",
        "javascriptreact",
        "typescript",
        "javascript",
        "vue-html",
        "vue",
        "php",
        "markdown",
        "coffeescript",
        "svelte",
        "astro"
      ],
      "diffEditor.ignoreTrimWhitespace": false,
  }